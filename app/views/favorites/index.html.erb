<h1>お気に入り一覧</h1>

<% @favorites.each do |f| %>
    <div class="f-container">
      <div class="post-card">
        <div class="post-card__inner">
          <div class="post-thumb">
              <p><%=link_to image_tag(f.post.image.url),user_path(f.post.user.id)%></p>
          </div>
          <div class="post-content">
            <%= link_to image_tag(f.user.icon.url,class:"post-icon"),user_path(f.post.user.id) %>
            <%= link_to f.post.user.name,user_path(f.post.user.id) %>
          </div>
          <p>title:<%= f.post.title %></p>
          <p>content:<%= f.post.content %></p>
        </div>
        <div class="post-button">
          <span><%= link_to '詳細', post_path(f.post.id),class:"btn btn-info" %></span>
        </div>
      </div>
    </div>
<% end %>
