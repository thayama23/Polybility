<% comments.each do |comment| %>
  <% if comment.content.present? %>
    <div class="balloon1">
      <div class="icon">
        <%= link_to image_tag(comment.user.icon.url,class:"icon"),user_path(comment.user.id) %>
      </div>
      <div class="content">
          <div class="header">
            <strong><%= comment.user.name %><%= t('nav.mr_ms')%></strong>
          </div>
          <div class="list">
            <i class="right triangle icon"></i>
            <span id="<%=comment.id %>"><%= comment.content %></span>
          </div>
      </div>
      <% if comment.user.id == current_user.id %>
        <%= link_to '編集', edit_post_comment_path(comment.post, comment), remote:true %>
        <%= link_to t('common.destroy'), post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %>
      <% end %>
    </div>
  <% end %>
<% end %>
