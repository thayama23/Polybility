<%= form_with(model: [post, comment]) do |form| %>
  <div class="comment-form">
    <div class="field">
      <p><%= form.label :content %></p>
      <p><%= form.text_area :content,placeholder: "75文字以内で入力してください" %></p>
    </div>
    <div class="actions">
      <p><%= form.submit class:"btn btn-green",id:"post_comment" %></p>
    </div>
  </div>
<% end %>
