<h2>プロフィール</h2>


<div class="pr-container">
  <div class="pr-icon">
    <p><%= image_tag @user.icon.url %></p>
  </div>


  <div class="pr-text">
  <p><%= render 'stats' %></p>
  <p>名前 : <%= @user.name %></p>
  <p>年齢 : <%= @user.age %></p>
  <p>性別 : <%= @user.gender %></p>
  <p>出身国 : <%= @user.country %></p>
  <p>母国語 : <%= @user.native_language %></p>
  <p>勉強している言語 : <%= @user.learning_language %></p>
  <p>趣味 : <%= @user.hobby %></p>
  </div>


  <% if current_user == @user %>
    <p><%= link_to 'プロフィールを編集する', edit_user_registration_url %></p>
  <% end %>
  <p><%= link_to 'ユーザー一覧に戻る', users_path %></p>
</div>
