<h1><%= t('users.followed_index') %></h1>
<div class="conversation-container">
  <% @user.following.each do |user| %>
    <div class="c-container">
      <div class="profile-card-follow">
        <div class="profile-card__inner-follow">
          <div class="profile-thumb-follow">
            <p><%=link_to image_tag(user.icon.url),user_path(user.id)%></p>
          </div>
          <div class="profile-content-follow">
            <span class="profile-name-follow"><%= link_to user.name,user_path(user.id) %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
