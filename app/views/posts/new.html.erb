<%= form_with(model: @post, local: true) do |f| %>
  <div class="blog_title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="post_content">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <%= f.submit %>
<% end %>



