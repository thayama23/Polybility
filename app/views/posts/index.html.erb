<h1>投稿一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>

    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
  </tr>

  <% end %>
</table>


<%= link_to '新規投稿する', new_post_path %>
