<h1>投稿詳細画面</h1>
<p>タイトル: <%= @post.title %></p>
<p>内容: <%= @post.content %></p>
<p>画像: <%= image_tag @post.image.url %></p>

<% if current_user.id == @post.user.id %>
  <%= link_to '編集する', edit_post_path(@post) %>
  <%= link_to '削除する', post_path(@post), method: :delete %>
<% end %>

<p>お気に入りの数:<%= @favorite_count %></p>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post %>
  <% end %>

<p>コメント一覧</p>

<div id="comments_area">
  <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

<%= link_to '投稿一覧に戻る', posts_path %>
