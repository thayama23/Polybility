<h1>投稿詳細画面</h1>
<p>タイトル: <%= @post.title %></p>
<p>内容: <%= @post.content %></p>
<p>画像: <%= image_tag @post.image.url %></p>

<% if current_user.id == @post.user.id %>
<%= link_to '編集する', edit_post_path(@post) %>
<%= link_to '削除する', post_path(@post), method: :delete %>
<% end %>

<% unless @post.user_id == current_user.id %>
<p>お気に入りの数:<%= @favorite_count %></p>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>


<%= link_to '投稿一覧に戻る', posts_path %>
